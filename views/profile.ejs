
<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Yazy Games</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/upload" class="btn btn-default btn-sm">Upload Photo</a>
        <a href="/JigsawPuzzle" class="btn btn-default btn-sm">JigsawPuzzle</a>
        <a href="/leaderboard" class="btn btn-default btn-sm">LeaderBoard</a>
        <a href="/MemoryGame2" class="btn btn-default btn-sm">MemoryGame2</a>
        <a href="/memoryrefresh" class="btn btn-default btn-sm">Refresh Memory Images</a>
        <a href="/quizgame" class="btn btn-default btn-sm">QuizGame</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>
					<p>
					<img src="img/<%= fname %>.jpg" width="60%" height="250px"/>
					</p>
					
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

            </div>
        </div>

    </div>

</div>
</body>
</html>